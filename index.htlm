    }

    main {
      width: 90%;
      max-width: 700px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    a.project {
      display: block;
      text-decoration: none;
      background: white;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.15s ease, box-shadow 0.15s ease;
      color: #222;
    }

    a.project:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    a.project h2 {
      font-size: 1.2rem;
      margin: 0;
    }

    a.project p {
      font-size: 0.95rem;
      color: #555;
      margin: 5px 0 0;
    }

    footer {
      margin-top: auto;
      padding: 30px;
      color: #777;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <header>
